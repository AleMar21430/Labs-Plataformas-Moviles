<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.marti21430.lab10.ui.fragments.CharacterListFragment"
        android:label="@string/characters"
        tools:layout="@layout/fragment_character_list" >
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.marti21430.lab10.ui.fragments.CharacterDetailsFragment"
        android:label="@string/character_detail"
        tools:layout="@layout/fragment_character_details" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.marti21430.lab10.ui.fragments.Login"
        android:label="Login" >
        <action
            android:id="@+id/action_login_to_characterListFragment"
            app:destination="@id/characterListFragment" />
    </fragment>
</navigation>